<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingVertical="8dp"
    tools:background="@color/dark_transparent_background"
    tools:context=".presentation.screens.editor.EditorFragment">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:constraint_referenced_ids="circle_item_photo_filter,filter_name_text_view_item_photo_filter" />

    <View
        android:id="@+id/border_item_photo_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_circle_64_white"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintBottom_toBottomOf="@+id/circle_item_photo_filter"
        app:layout_constraintEnd_toEndOf="@+id/circle_item_photo_filter"
        app:layout_constraintStart_toStartOf="@+id/circle_item_photo_filter"
        app:layout_constraintTop_toTopOf="@+id/circle_item_photo_filter" />

    <View
        android:id="@+id/circle_item_photo_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/baseline_circle_64_white"
        tools:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/filter_name_text_view_item_photo_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="text" />

</androidx.constraintlayout.widget.ConstraintLayout>